@model WebQuanLyNhaHang.Models.Order

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<main id="main" class="main">
    <div class="pagetitle">
        <h2>Xác nhận xoá bàn ăn</h2>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="OrderID">OrderID</label>
            <input type="text" class="form-control mb-3" asp-for="OrderID" disabled />
        </div>
        <div class="form-group col-md-6">
            <label asp-for="FullName">Người đặt</label>
            <input type="text" class="form-control mb-3" asp-for="FullName" disabled />
        </div>
    </div>
    <!--Begin Form-->
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="OrderID" />
        <a class="btn btn-lg btn-warning p-2 mr-5" href="javascript:history.back()">
            <i class="bi bi-arrow-left-circle"></i>Quay lại
        </a>
        <button type="submit" class="btn btn-lg btn-danger p-2">
            <i clclass="bi bi-trash-fill"></i>
            Xoá đặt bàn
        </button>
    </form>
    <!--End Form-->
</main>
