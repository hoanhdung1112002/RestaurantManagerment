@using WebQuanLyNhaHang.Utilities;
@model WebQuanLyNhaHang.Models.Foods

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<main id="main" class="main">
    <div class="pagetitle">
        <h2>Xác nhận thêm món ăn</h2>
    </div>
    <div class="container shadown p-5">
        <div class="row pb-2">
            <h2>Thêm mới món ăn</h2>
        </div>

        <form method="post" asp-action="Create">
            <div asp-validation-summary="All"></div>
            <div class="form-row">
                <div class="form-group col-md-12">
                    <label asp-for="FoodName">FoodName</label>
                    <input type="text" autocomplete="off" class="form-control mb-3" asp-for="FoodName" placeholder="Nhập tên món ăn" />
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-12">
                    <label asp-for="CategoryID">Khung giờ</label>
                    <select asp-for="CategoryID" class="form-select" id="CategoryID">
                        <option value="2">Buổi sáng</option>
                        <option value="3">Buổi trưa</option>
                        <option value="4">Buổi tối</option>
                        <option value="5">Đồ uống</option>
                    </select>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="DataFood">Loại</label>
                    <select asp-for="DataFood" class="form-select" id="DataFood">
                        <option value="breakfast">breakfast</option>
                        <option value="lunch">lunch</option>
                        <option value="dinner">dinner</option>
                        <option value="drink">drink</option>
                    </select>
                </div>

                <div class="form-group col-md-12">
                    <label asp-for="Description">Mô tả món ăn</label>
                    <textarea id="Description" asp-for="Description" class="form-control"></textarea>
                </div>

                

                <div class="form-group col-md-12">
                    <label asp-for="Material">Nguyên liệu</label>
                    <textarea id="Contents" asp-for="Material" class="form-control"></textarea>
                </div>

                <div class="form-group col-md-12">
                    <label class="control-label">Ảnh</label>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <button class="btn btn-success" type="button" onclick="openDialog()">Choose a pic</button>
                        </div>
                        <input type="text" autocomplete="off" class="form-control" asp-for="Image" id="file_input" aria-describedby="button-addon2">
                    </div>
                </div>

                <div class="form-group col-md-6">
                    <label asp-for="Price">Giá</label>
                    <input type="text" autocomplete="off" class="form-control mb-3" asp-for="Price" placeholder="Giá" autocomplete="off" />
                    <span asp-validation-for="Price" class="alert-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="EmployeeID">Đầu bếp</label>
                    <select asp-for="EmployeeID" class="form-select" id="EmployeeID">
                        <option value="1">Hồ Anh Dũng</option>
                        <option value="2">Phan Nguyễn Đức Anh</option>
                        <option value="3">Hồ Anh Hoà</option>
                        <option value="4">Đinh Xuân Hoàng</option>
                    </select>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Link">Link tham khảo</label>
                    <input type="text" autocomplete="off" class="form-control mb-3" asp-for="Link" placeholder="Link tham khảo" autocomplete="off" />
                    <span asp-validation-for="Link" class="alert-danger"></span>
                </div>

                <div class="form-group d-none">
                    <input asp-for="Status" autocomplete="off" class="form-control" value="1" />
                </div>

                <div class="form-group d-none">
                    <input asp-for="CreatedDate" autocomplete="off" class="form-control" value="@Functions.getCurrentDate()" />
                </div>


                <div class="form-group col-md-6 mt-3 mb-3">
                    <label>
                        @Html.CheckBox("IsActive", false)
                        Hiển thị
                    </label>
                </div>
            </div>
            <button type="submit" class="btn btn-lg btn-primary p-2">
                <i class="bi bi-file-plus-fill"></i>
                Lưu
            </button>
            <a asp-controller="Foods" asp-action="Index" class="btn btn-lg btn-warning p-2">Quay lại</a>
        </form>
    </div>
</main>
@{
    var summerNote = new WebQuanLyNhaHang.Areas.Admin.Models.SummerNote("#Contents");
    <partial name="_SummerNote" model="summerNote" />
}