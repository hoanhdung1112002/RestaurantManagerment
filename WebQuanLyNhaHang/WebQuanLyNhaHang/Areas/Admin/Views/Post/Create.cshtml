@using WebQuanLyNhaHang.Utilities;
@model WebQuanLyNhaHang.Models.Post

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<main id="main" class="main">
    <div class="pagetitle">
        <h2>Xác nhận thêm bài viết</h2>
    </div>
    <div class="container shadown p-5">
        <div class="row pb-2">
            <h2>Thêm mới bài viết</h2>
        </div>
        <form asp-action="Create" method="post">
            <div asp-validation-summary="All"></div>
            <div class="form-row">
                <div class="form-group col-md-12">
                    <label asp-for="Title">Tiêu đề</label>
                    <input type="text" class="form-control mb-3" asp-for="Title" autocomplete="off" placeholder="Tiêu đề bài viết"/>
                </div>

                <div class="form-group col-md-12">
                    <label asp-for="Abstract">Tóm tắt</label>
                    <input type="text" class="form-control mb-3" asp-for="Abstract" autocomplete="off" placeholder="Tóm tắt bài viết" />
                </div>

                <div class="form-group col-md-12">
                    <label asp-for="Contents">Nội dung</label>
                    <textarea id="Contents" asp-for="Contents" class="form-control"></textarea>
                </div>

                <div class="form-group col-md-12">
                    <label class="control-label">Hình ảnh</label>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <button class="btn btn-success" type="button" onclick="openDialog()">Chọn hình ảnh</button>
                        </div>
                        <input type="text" class="form-control" asp-for="Images" id="file_input" aria-describedby="button-addon2">
                    </div>
                </div>

                <div class="form-group d-none">
                    <input asp-for="Link" class="form-control" />
                </div>

                <div class="form-group col-md-12">
                    <label asp-for="Author">Tác giả bài viết</label>
                    <input type="text" class="form-control mb-3" autocomplete="off" asp-for="Author" placeholder="Nhập tên tác giả bài viết" />
                </div>

                <div class="form-group d-none">
                    <input asp-for="CreatedDate" class="form-control" value="@Functions.getCurrentDate()" />
                </div>

                <div class="form-group d-none">
                    <input asp-for="Category" autocomplete="off" class="form-control" value="1" />
                </div>

                <div class="form-group d-none">
                    <input asp-for="Status" autocomplete="off" class="form-control" value="1" />
                </div>

                <div class="form-group col-md-6 mt-3 mb-3">
                    <label>
                        @Html.CheckBox("IsActive", false)
                        Hiển thị
                    </label>
                </div>
            </div>
            <button type="submit" class="btn btn-lg btn-primary p-2">
                <i class="bi bi-file-plus-fill"></i>
                Lưu
            </button>
            <a asp-controller="Post" asp-action="Index" class="btn btn-lg btn-warning p-2">Quay lại</a>
        </form>
    </div>
</main>
@{
    var summerNote = new WebQuanLyNhaHang.Areas.Admin.Models.SummerNote("#Contents");
    <partial name="_SummerNote" model="summerNote" />
}