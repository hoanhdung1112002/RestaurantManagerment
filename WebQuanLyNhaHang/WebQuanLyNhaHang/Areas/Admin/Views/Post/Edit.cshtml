@using WebQuanLyNhaHang.Utilities;
@model WebQuanLyNhaHang.Models.Post

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<main id="main" class="main">
    <div class="pagetitle">
        <h2>Xác nhận sửa bài viết</h2>
    </div>
    <div class="container shadown p-5">
        <div class="row pb-2">
            <h2>Sửa bài viết</h2>
        </div> 
        <form method="post" asp-action="Edit">
            <div asp-validation-summary="All"></div>
                <!--FoodID-->
            <div class="form-row">
                <input type="text" autocomplete="off" class="form-control mb-3" asp-for="PostID" type="hidden" />
                <div class="form-group col-md-12">
                    <label asp-for="Title">Title</label>
                    <input type="text" autocomplete="off" class="form-control mb-3" asp-for="Title" placeholder="Nhập tiêu đề bài viết" />
                </div>

                <div class="form-group col-md-12">
                    <label asp-for="Abstract">Abstract</label>
                    <input type="text" autocomplete="off" class="form-control mb-3" asp-for="Abstract" placeholder="Nhập tiêu đề bài viết" />
                </div>

                <div class="form-group col-md-12">
                    <label asp-for="Contents">Contents</label>
                    <textarea id="Contents" asp-for="Contents" class="form-control"></textarea>
                </div>

                <div class="form-group col-md-12">
                    <label class="control-label">Hình ảnh</label>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <button class="btn btn-success" type="button" onclick="openDialog()">Choose a pic</button>
                        </div>
                        <input type="text" class="form-control" asp-for="Images" id="file_input" aria-describedby="button-addon2">
                    </div>
                </div>

                <div class="form-group d-none">
                    <input asp-for="Link" class="form-control" value="NULL" />
                </div>

                <div class="form-group col-md-12">
                    <label asp-for="Author">Author</label>
                    <input type="text" class="form-control mb-3" asp-for="Author" placeholder="Nhập tiêu đề bài viết" />
                </div>

                <div class="form-group d-none">
                    <input asp-for="CreatedDate" class="form-control" value="@Functions.getCurrentDate()" />
                </div>


                <div class="form-group d-none">
                    <input asp-for="Category" class="form-control" value="1" />
                </div>

                <div class="form-group d-none">
                    <input asp-for="Status" class="form-control" value="1" />
                </div>

                <div class="form-group col-md-6 mt-3 mb-3">
                    <label>
                        @Html.CheckBox("IsActive", false)
                        Hiển thị
                    </label>
                </div>
            </div>
            <button type="submit" class="btn btn-lg btn-primary p-2">
                <i class="bi bi-file-plus-fill"></i>
                Lưu
            </button>
            <a asp-controller="Post" asp-action="Index" class="btn btn-lg btn-warning p-2">Quay lại</a>
        </form>
    </div>
</main>
@{
    var summerNote = new WebQuanLyNhaHang.Areas.Admin.Models.SummerNote("#Contents");
    <partial name="_SummerNote" model="summerNote" />
}

