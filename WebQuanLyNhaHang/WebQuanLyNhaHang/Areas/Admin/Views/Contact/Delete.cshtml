@model WebQuanLyNhaHang.Models.Contact

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<main id="main" class="main">
    <div class="pagetitle">
        <h2>Xác nhận xoá liên hệ</h2>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="ContactID">ContactID</label>
            <input type="text" class="form-control mb-3" asp-for="ContactID" disabled />
        </div>
        <div class="form-group col-md-6">
            <label asp-for="FullName">Người liên hệ</label>
            <input type="text" class="form-control mb-3" asp-for="FullName" disabled />
        </div>
    </div>
    <!--Begin Form-->
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="ContactID" />
        <a class="btn btn-lg btn-warning p-2 mr-5" href="javascript:history.back()">
            <i class="bi bi-arrow-left-circle"></i>Quay lại
        </a>
        <button type="submit" class="btn btn-lg btn-danger p-2">
            <i clclass="bi bi-trash-fill"></i>
            Xoá thông tin
        </button>
    </form>
    <!--End Form-->
</main>
