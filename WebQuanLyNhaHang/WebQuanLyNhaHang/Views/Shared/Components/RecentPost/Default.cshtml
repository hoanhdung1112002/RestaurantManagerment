@using WebQuanLyNhaHang.Models;
@using WebQuanLyNhaHang.Utilities;
@model IList<Post>

<!-- Recent Post Start -->
<div class="mb-5 wow slideInUp" data-wow-delay="0.1s">
    <div class="section-title section-title-sm position-relative pb-3 mb-4">
        <h3 class="mb-0">Danh sách bài viết</h3>
    </div>
    @foreach (var item in Model)
    {
        string url = Functions.TitleSlugGeneration("post", item.Title, item.PostID);
        <div class="d-flex rounded overflow-hidden mb-3">
            <a href="/@url">
                <img class="img-fluid"
                 src="@item.Images"
                 style="min-width: 90px; max-width: 95px; height: 90px; object-fit: cover; object-position: center; border-radius: 5px;"
                 alt="" />
            </a>
            <a href="/@url"
           class="h5 fw-semi-bold d-flex align-items-center bg-light px-3 mb-0">
                @item.Title
            </a>
        </div>
    }
    
    
</div>
<!-- Recent Post End -->
