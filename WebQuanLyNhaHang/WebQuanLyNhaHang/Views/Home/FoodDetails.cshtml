@model WebQuanLyNhaHang.Models.ViewFoodDetails;
<!-- Navbar & Hero Start -->
<div class="container-xxl position-relative p-0">

    <div class="container-xxl py-5 bg-dark hero-header mb-5">
        <div class="container text-center my-5 pt-5 pb-4">
            <h1 class="display-3 text-white mb-3 animated slideInDown">Chi tiết món ăn</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb justify-content-center text-uppercase">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
                    <li class="breadcrumb-item text-white active" aria-current="page">Chi tiết món ăn</li>
                </ol>
            </nav>
        </div>
    </div>
</div>
<!-- Navbar & Hero End -->
<!-- ======= Portfolio Details Section ======= -->

<!-- End Portfolio Details Section -->

<section class="section profile" style="overflow-x: hidden">
    <div class="row">
        <div class="col-xl-5">

            <div class="card">
                <div class="card-body profile-card pt-4 d-flex flex-column align-items-center">

                    <img style="width: 100%; height: 420px; border-radius: 10px" src="@Html.Raw(Model.Image)" alt="Profile" class="rounded-circle">
                    <h2 style="font-size: 28px;
                        font-weight: bolder;
                        color: #2c384e;
                        margin: 16px 0 0 0;">
                        @Html.DisplayFor(model => model.FoodName)
                    </h2>
                </div>
            </div>

        </div>

        <div class="col-xl-7">

            <div class="card">
                <div class="card-body pt-3">
                    <!-- Bordered Tabs -->
                    <ul class="nav nav-tabs nav-tabs-bordered">

                        <li class="nav-item">
                            <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#profile-overview">Thông tin món ăn</button>
                        </li>

                    </ul>
                    <div class="tab-content pt-2">

                        <div class="tab-pane fade show active profile-overview" id="profile-overview">
                            

                            <h5 class="card-title" style="padding: 20px 0 15px 0;
                                    font-size: 18px;
                                    font-weight: 500;
                                    color: #012970;
                                    font-family: " Poppins", sans-serif;">
                                Thông tin chi tiết
                            </h5>

                            <div class="row" style="margin-bottom: 20px;
                                font-size: 15px;">
                                <div class="col-lg-3 col-md-4 label ">Tên món ăn</div>
                                <div class="col-lg-9 col-md-8">@Html.DisplayFor(model => model.FoodName)</div>
                            </div>

                            <div class="row" style="margin-bottom: 20px;
                                font-size: 15px;">
                                <div class="col-lg-3 col-md-4 label">Khung giờ phục vụ</div>
                                <div class="col-lg-9 col-md-8">@Html.DisplayFor(model => model.CategoryName)</div>
                            </div>

                            <div class="row" style="margin-bottom: 20px;
                                font-size: 15px;">
                                <div class="col-lg-3 col-md-4 label">Đầu bếp chế biến</div>
                                <div class="col-lg-9 col-md-8">@Html.DisplayFor(model => model.EmployeeName)</div>
                            </div>

                            <div class="row" style="margin-bottom: 20px;
                                font-size: 15px;">
                                <div class="col-lg-3 col-md-4 label">Giá</div>
                                <div class="col-lg-9 col-md-8">@Html.DisplayFor(model => model.Price)</div>
                            </div>

                            <div class="row" style="margin-bottom: 20px;
                                font-size: 15px;">
                                <div class="col-lg-3 col-md-4 label">Tìm hiểu thêm</div>
                                <div class="col-lg-9 col-md-8">
                                    <a href="@Html.DisplayFor(model => model.Link)">@Html.DisplayFor(model => model.Link)</a>
                                </div>
                            </div>
                            <h3 class="card-title" style="padding: 20px 0 15px 0;
                                    font-size: 18px;
                                    font-weight: 800;
                                    color: #012970;
                                    font-family: " Poppins", sans-serif;">
                                Mô tả món ăn
                            </h3>
                            <p stystyle="font-size: 1.1em;" >@Html.DisplayFor(model => model.Description)</p>
                            <h3 class="card-title" style="padding: 20px 0 15px 0;
                                    font-size: 18px;
                                    font-weight: 800;
                                    color: #012970;
                                    font-family: " Poppins", sans-serif;">
                                Nguyên liệu chế biến
                            </h3>
                            <p stystyle="font-size: 1.1em;">@Html.DisplayFor(model => model.Material)</p>

                        </div>
                    </div><!-- End Bordered Tabs -->

                </div>
            </div>

        </div>
    </div>
</section>