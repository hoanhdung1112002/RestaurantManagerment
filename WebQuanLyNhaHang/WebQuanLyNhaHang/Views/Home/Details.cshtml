@model WebQuanLyNhaHang.Models.Post;

<!-- Navbar & Hero Start -->
<div class="container-xxl position-relative p-0">

    <div class="container-xxl py-5 bg-dark hero-header mb-5">
        <div class="container text-center my-5 pt-5 pb-4">
            <h1 class="display-3 text-white mb-3 animated slideInDown">Chi tiết bài viết</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb justify-content-center text-uppercase">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
                    <li class="breadcrumb-item text-white active" aria-current="page">Chi tiết bài viết</li>
                </ol>
            </nav>
        </div>
    </div>
</div>
<!-- Navbar & Hero End -->
<!-- Blog Start -->
<div class="container-fluid py-5s wow fadeInUp" data-wow-delay="0.1s" style="padding-top: 0">
    <div class="container py-5s">
        <div class="row g-5">
            <div class="col-lg-8">
                <!-- Blog Detail Start -->
                <div class="mb-5">
                    <h1 class="mb-4">@Html.DisplayFor(model => model.Title)</h1>
                    <h3>@Html.Raw(Model.Abstract)</h3>
                    <p>
                        @Html.Raw(Model.Contents)
                    </p>
                    <img class="img-fluid w-100 rounded mb-5" src="@Html.Raw(Model.Images)" alt="">
                    <p style="font-weight: bold">Tác giả: 
                        <a style="cursor: pointer; transition: 0.3s all; font-weight: 400">@Html.Raw(Model.Author)</a>
                    </p>
                    <p style="font-weight: bold">
                        Ngày viết bài:
                        <span style="font-style:italic; font-weight: 400">@Html.Raw(Model.CreatedDate)</span>
                    </p>
                </div>
                <!-- Blog Detail End -->
            </div>

            <!-- Sidebar Start -->
            <div class="col-lg-4">
                @await Component.InvokeAsync("RecentPost")
            </div>
            <!-- Sidebar End -->
        </div>
    </div>
</div>
<!-- Blog End -->

